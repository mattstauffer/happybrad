{
  "name": "mattstauffer/happybrad",
  "description": "Add a Happy Brad to your Craft CMS Dashboard.",
  "type": "craft-plugin",
  "keywords": [
    "happy",
    "brad",
    "craftcms",
    "dashboard",
    "widget"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Matt Stauffer",
      "homepage": "http://mattstauffer.co/"
    }
  ],
  "support": {
    "issues": "https://github.com/mattstauffer/happybrad/issues?state=open",
    "source": "https://github.com/mattstauffer/happybrad",
    "docs": "https://github.com/mattstauffer/happybrad",
    "rss": "https://github.com/mattstauffer/happybrad/commits/master.atom"
  },
  "require": {
    "craftcms/cms": "^4.0.0"
  },
  "autoload": {
    "psr-4": {
      "mattstauffer\\happybrad\\": "src/"
    }
  },
  "extra": {
    "name": "Happy Brad",
    "handle": "happy-brad"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "craftcms/rector": "dev-main",
    "craftcms/phpstan": "dev-main",
    "pestphp/pest": "^1.22"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
      "phpstan": "vendor/bin/phpstan analyse",
      "test": "vendor/bin/pest"
  }
}
